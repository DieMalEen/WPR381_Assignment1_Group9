<!-- pages\about.ejs -->
<!-- Include Header -->
<%- include('../partials/header.ejs') %>
<body>
    
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-body">
                <h1 class="card-title text-center mb-4">About Us</h1>
                <p class="lead text-center">Welcome to <strong><%= organization.name %></strong>!</p>
                <div class="text-center my-4">
                    <p><strong>Our Mission:</strong> <%= organization.mission %></p>
                    <p><strong>Our Vision:</strong> <%= organization.vision %></p>
                </div>
                <h2 class="mt-4 text-center">Our Values</h2>
                <div class="d-flex justify-content-center flex-wrap gap-3">
                    <% if (organization.values && organization.values.length) { %>
                        <% organization.values.forEach(function(value) { %>
                            <div class="card text-center p-3 value-card" style="width: 250px;">
                                <h5 class="card-title"><%= value.tile %></h5>
                                <p class="card-text"><%= value.explanation %></p>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No values available</p>
                    <% } %>
                </div>

                <h2 class="mt-4 text-center">Our Team</h2>
                <div class="d-flex justify-content-center flex-wrap gap-3">
                    <% if (team && team.length) { %>
                        <% team.forEach(function(member) { %>
                            <div class="card text-center team-card" style="width: 180px;">
                                <img src="/images/TeamMembers/<%= member.image %>" class="card-img-top rounded-circle mx-auto mt-2" alt="<%= member.name %>" style="width: 100px; height: 100px;">
                                <div class="card-body">
                                    <h5 class="card-title"><%= member.name %></h5>
                                    <p class="card-text"><%= member.role %></p>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No team members available</p>
                    <% } %>
                </div>   
            </div>
        </div>
    </div>
    <br><br><br><br><br>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="style.css">
</body>
</html>

<!-- Includes Footer -->
<%- include('../partials/footer.ejs') %>