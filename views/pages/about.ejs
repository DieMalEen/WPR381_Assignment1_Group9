<!-- pages\about.ejs -->
<!-- Include Header -->
<%- include('../partials/header.ejs') %>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Community Connect Hub</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- About Section -->
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-body">
                <h1 class="card-title text-center mb-4">About Us</h1>
                <p class="lead text-center">Welcome to <strong><%= organization.name %></strong>!</p>
                <p><strong>Our Mission:</strong> <%= organization.mission %></p>
                <p><strong>Our Vision:</strong> <%= organization.vision %></p>

                <h2 class="mt-4">Our Values</h2>
                <ul class="list-group list-group-flush">
                    <% if (organization.values && organization.values.length) { %>
                        <% organization.values.forEach(function(value) { %>
                            <li class="list-group-item"><%= value %></li>
                        <% }); %>
                    <% } else { %>
                        <li class="list-group-item">No values available</li>
                    <% } %>
                </ul>

                <h2 class="mt-4">Our Team</h2>
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    <% if (team && team.length) { %>
                        <% team.forEach(function(member) { %>
                            <div class="col">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= member.name %></h5>
                                        <p class="card-text"><%= member.role %></p>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No team members available</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<!-- Include Footer -->
<%- include('../partials/footer.ejs') %>