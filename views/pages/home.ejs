<!-- Include Header -->
<%- include('../partials/header.ejs') %>

<body>
  <div class="container">
    <section class="section">
      <h1 class="title"><%= message %></h1>
      <p class="subtitle">Welcome to our community portal!</p>
     
      <!-- Upcoming Events Section -->
      <section>
        <h2 class="title">ðŸš€ Upcoming Events</h2>
        <% if (events.length > 0) { %>
          <ul>
            <% events.forEach(event => { %>
              <li>
                <strong><%= event.name %></strong>
                | <%= event.date %>
                | <%= event.location %>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="subtitle">No events scheduled yet. Stay tuned!</p>
        <% } %>
      </section>
    </section>
  </div>
</body>
</html>
 
